@model IEnumerable<PatientInformation.Models.PatientViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mb-3">
        <div class="col-sm-10 text-center">
            <a href="@Url.Action("AddPatient", "Patient")" class="btn btn-primary">Add Patient</a>
        </div>
    </div>
    <h2 class="my-4">Patient List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Disease</th>
                <th scope="col">NCD</th>
                <th scope="col">Allergies</th>
                <th scope="col">Epilepsy</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.PatientName</td>
                    <td>@patient.DiseaseName</td>
                    <td>@patient.AllergiesName</td>
                    <td>@patient.NCDName</td>
                    <td>@patient.Epilepsy</td>
                    <td>
                        <a href="@Url.Action("Edit", "Patient", new { id = patient.PatientID })" class="btn btn-primary">Edit</a>
                        <button onclick="deletePatient('@patient.PatientID')" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function deletePatient(patientId) {
        if (confirm('Are you sure you want to delete this patient?')) {
            $.ajax({
                url: '/Patient/DeletePatient/' + patientId,
                type: 'DELETE',
                success: function (result) {
                    
                    window.location.reload();
                },
                error: function (xhr, status, error) {
                    
                    console.error(xhr.responseText);
                }
            });
        }
    }
</script>

